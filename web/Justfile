default:
    @just --list --unsorted | grep -v '  default'

watch *args: setup
    npm run dev -- {{ args }}

build: setup
    npm run build

check: setup
    npm run check

test: setup
    npm run test:unit --run

e2e: setup
    npm run test:e2e

fmt: setup
    npm run format

lint *args: setup
    npm run lint -- {{ args }}

setup:
    [ -d ./node_modules ] || npm ci
