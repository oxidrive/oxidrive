default:
    @just --list --unsorted | grep -v '  default'

watch: setup
    npm run dev

build: setup
    npm run build

check: setup
    npm run check

test: setup
    npm run test:unit --run

e2e: setup
    npm run test:e2e

fmt: setup
    npm run format

lint: setup
    npm run lint

setup:
    [ -d ./node_modules ] || npm ci
