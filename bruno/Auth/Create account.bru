meta {
  name: Create account
  type: http
  seq: 3
}

post {
  url: {{server}}/api/v1/accounts
  body: formUrlEncoded
  auth: none
}

body:form-urlencoded {
  username: {{createUsername}}
  password: {{password}}
}

assert {
  res.status: eq 201
  res.body.username: eq {{createUsername}}
}

script:pre-request {
  bru.setVar("createUsername", "bruno-" + nanoid.nanoid());
}
