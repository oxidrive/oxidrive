{
	"name": "oxidrive-ui",
	"private": true,
	"type": "module",
	"version": "0.1.0",
	"scripts": {
		"dev": "vite dev",
		"start": "vite dev",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && biome check",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"format": "biome check --write .",
		"lint": "biome ci && npm run style:lint",
		"lint:fix": "biome lint --write . && npm run style:lint:fix",
		"style:lint": "stylelint src/**/*.{svelte,css,scss}",
		"style:lint:fix": "stylelint src/**/*.{svelte,css,scss} --fix",
		"clean": "rimraf build .svelte-kit"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.9.0",
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.81.0",
		"@nubolab-ffwd/svelte-fluent": "^1.0.3",
		"@playwright/test": "1.47.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.17.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "^20.12.7",
		"caniuse-lite": "^1.0.30001614",
		"concurrently": "^8.2.2",
		"lightningcss": "^1.25.1",
		"openapi-typescript": "^7.0.0",
		"rimraf": "^6.0.1",
		"sass": "^1.83.1",
		"stylelint": "^16.14.1",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-standard-scss": "^14.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tslib": "^2.4.1",
		"typescript": "^5.5.0",
		"vite": "^5.4.11",
		"vitest": "^2.0.4"
	},
	"dependencies": {
		"@fluent/bundle": "^0.18.0",
		"@fluent/langneg": "^0.7.0",
		"@fortawesome/fontawesome-free": "^6.5.2",
		"@fortawesome/fontawesome-svg-core": "^6.5.2",
		"@fortawesome/free-brands-svg-icons": "^6.5.2",
		"@fortawesome/free-solid-svg-icons": "^6.5.2",
		"@fortawesome/svelte-fontawesome": "^0.2.2",
		"highlight.js": "^11.11.1",
		"openapi-fetch": "^0.10.1",
		"zod": "^3.24.1"
	},
	"engines": {
		"node": ">=20 <21"
	}
}
