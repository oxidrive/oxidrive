{
  "openapi": "3.1.0",
  "info": {
    "title": "Oxidrive",
    "description": "",
    "contact": {
      "name": "Matteo Joliveau",
      "email": "matteo@matteojoliveau.com"
    },
    "license": {
      "name": "AGPL-3.0-only",
      "identifier": "AGPL-3.0-only"
    },
    "version": "0.1.0"
  },
  "paths": {
    "/api/v1/accounts": {
      "post": {
        "tags": [
          "accounts"
        ],
        "operationId": "api::v1::accounts::create",
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/CreateAccount"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/AccountCreated"
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      }
    },
    "/api/v1/collections": {
      "get": {
        "tags": [
          "collections"
        ],
        "operationId": "api::v1::collections::list",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Page_CollectionData"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      },
      "post": {
        "tags": [
          "collections"
        ],
        "operationId": "api::v1::collections::create",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCollection"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/CollectionCreated"
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      }
    },
    "/api/v1/collections/{collection_id}": {
      "get": {
        "tags": [
          "files"
        ],
        "operationId": "api::v1::collections::get",
        "parameters": [
          {
            "name": "collection_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CollectionData"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      },
      "patch": {
        "tags": [
          "collections"
        ],
        "operationId": "api::v1::collections::update",
        "parameters": [
          {
            "name": "collection_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateCollection"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/CollectionUpdated"
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      }
    },
    "/api/v1/files": {
      "get": {
        "tags": [
          "files"
        ],
        "operationId": "api::v1::files::list",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "The OxiQL filter to search files for.\nMutually exclusive with `ids`",
            "required": false,
            "schema": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          {
            "name": "id",
            "in": "query",
            "description": "The list of File IDs to load. Non-existent IDs will be ignored.\nMutually exclusive with `search`",
            "required": false,
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "uuid"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Page_FileData"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      }
    },
    "/api/v1/files/{file_id}": {
      "get": {
        "tags": [
          "files"
        ],
        "operationId": "api::v1::files::get",
        "parameters": [
          {
            "name": "file_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FileData"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      }
    },
    "/api/v1/files/{file_id}/tags": {
      "put": {
        "tags": [
          "files"
        ],
        "operationId": "api::v1::files::tags::update",
        "parameters": [
          {
            "name": "file_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTags"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/TagsUpdated"
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      }
    },
    "/files": {
      "post": {
        "tags": [
          "files",
          "content"
        ],
        "operationId": "files::upload",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "file"
                ],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "contentMediaType": "application/octet-stream"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/UploadCompleted"
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      }
    },
    "/files/{file_name}": {
      "get": {
        "tags": [
          "files",
          "content"
        ],
        "operationId": "files::download",
        "parameters": [
          {
            "name": "file_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "force",
            "in": "query",
            "required": true,
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Raw content of the file. The actual content type varies based on the detected format",
            "content": {
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                },
                "example": "hello world"
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/ApiError"
          },
          "5XX": {
            "$ref": "#/components/responses/ApiError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccountInfo": {
        "type": "object",
        "required": [
          "id",
          "username"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "username": {
            "type": "string",
            "examples": [
              "admin",
              "myuser"
            ]
          }
        }
      },
      "ApiError": {
        "type": "object",
        "required": [
          "error",
          "message",
          "details"
        ],
        "properties": {
          "details": {
            "type": "object",
            "additionalProperties": {},
            "propertyNames": {
              "type": "string"
            }
          },
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "CollectionData": {
        "type": "object",
        "required": [
          "id",
          "name",
          "filter",
          "files"
        ],
        "properties": {
          "files": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "filter": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "CreateAccount": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "CreateCollection": {
        "type": "object",
        "required": [
          "name",
          "filter"
        ],
        "properties": {
          "filter": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Cursor": {
        "type": "string"
      },
      "FileData": {
        "type": "object",
        "required": [
          "id",
          "name",
          "content_type",
          "size",
          "tags"
        ],
        "properties": {
          "content_type": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "size": {
            "type": "integer",
            "minimum": 0
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          }
        }
      },
      "Page_CollectionData": {
        "type": "object",
        "required": [
          "items"
        ],
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "name",
                "filter",
                "files"
              ],
              "properties": {
                "files": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                "filter": {
                  "type": "string"
                },
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "next": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/Cursor"
              }
            ]
          },
          "previous": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/Cursor"
              }
            ]
          }
        }
      },
      "Page_FileData": {
        "type": "object",
        "required": [
          "items"
        ],
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "name",
                "content_type",
                "size",
                "tags"
              ],
              "properties": {
                "content_type": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "size": {
                  "type": "integer",
                  "minimum": 0
                },
                "tags": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tag"
                  }
                }
              }
            }
          },
          "next": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/Cursor"
              }
            ]
          },
          "previous": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/Cursor"
              }
            ]
          }
        }
      },
      "Tag": {
        "type": "object",
        "required": [
          "key"
        ],
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      },
      "UpdateCollection": {
        "type": "object",
        "properties": {
          "filter": {
            "type": [
              "string",
              "null"
            ]
          },
          "name": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      },
      "UpdateTags": {
        "type": "object",
        "required": [
          "tags"
        ],
        "properties": {
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "responses": {
      "AccountCreated": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/AccountInfo"
            }
          }
        }
      },
      "ApiError": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ApiError"
            }
          }
        }
      },
      "CollectionCreated": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/CollectionData"
            }
          }
        }
      },
      "CollectionUpdated": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/CollectionData"
            }
          }
        }
      },
      "TagsUpdated": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/FileData"
            }
          }
        }
      },
      "UploadCompleted": {
        "description": ""
      }
    },
    "securitySchemes": {
      "session": {
        "type": "apiKey",
        "in": "cookie",
        "name": "oxidrive_session"
      }
    }
  }
}